{
  "db": {
    "host": "localhost",
    "port": 27017,
    "name": "vorb_de",
    "collection": "docs"
  },

  "directories": {
    "input": "public",
    "output": "public",
    "templates": ".conf/templates",
    "tags": ".conf/tags"
  },

  "fileExtensions": {
    "txt": "html"
  },

  "indexes": [
    {
      "type": "homepage",
      "title": "Home",
      "pattern": "^log/\\d{4}/\\d{2}/.+$",
      "path": "index.html",
      "template": "home.tpl",
      "limit": 1,
      "sort": [["created", "desc"]]
    },
    {
      "type": "blog index",
      "title": "Blog",
      "pattern": "^log/\\d{4}/\\d{2}/.+$",
      "path": {
        "first": "log/index.html",
        "pattern": "log/index-{{page}}.html"
      },
      "template": "index.tpl",
      "limit": 12,
      "sort": [["created", "desc"]]
    },
    {
      "type": "blog feed",
      "title": "vorb.de",
      "pattern": "^log/\\d{4}/\\d{2}/.+$",
      "path": "log/feed.xml",
      "template": "article-feed.tpl",
      "limit": 10,
      "sort": [["created", "desc"]],
      "properties": {
        "title": "vorb.de",
        "subtitle": "web, development and other things",
        "id": "http://vorb.de/log/feed.xml"
      }
    }
  ],

  "tags": {
    "directory": "log/tag",
    "template": "tag.tpl",
    "sort": [["created", "desc"]],
    "index": {
      "path": "index.html",
      "template": "tag-index.tpl"
    }
  },

  "autoindex": [
    {
      "path": "index.html",
      "pattern": "^log/\\d{4}$",
      "template": "year.tpl",
      "directory": {
        "filter": "^$",
        "match": "\\d{2}"
      },
      "file": {
        "filter": "^$",
        "match": "^$"
      }
    },
    {
      "path": "index.html",
      "pattern": "^log/\\d{4}/\\d{2}$",
      "template": "month.tpl",
      "directory": {
        "filter": "^$",
        "match": "^$"
      },
      "file": {
        "filter": "index\\.html",
        "match": ".*\\.html"
      }
    }
  ]
}
