{
  "db": {
    "host": "localhost",
    "port": 27017,
    "name": "vorb_de",
    "collection": "docs"
  },

  "directories": {
    "input": "private",
    "output": "public",
    "templates": ".conf/templates",
    "tags": ".conf/tags"
  },

  "fileExtensions": {
    "txt": "html"
  },

  "indexes": [
    {
      "type": "blog index",
      "title": "Blog",
      "pattern": "^\\d{4}/.+$",
      "path": {
        "first": "index.html",
        "pattern": "index-{{page}}.html"
      },
      "template": "index.tpl",
      "limit": 8,
      "sort": [["created", "desc"]]
    },
    {
      "type": "archive",
      "title": "Archive",
      "pattern": "^\\d{4}/.+$",
      "path": "archive.html",
      "template": "archive.tpl",
      "limit": 99999999,
      "sort": [["created", "desc"]]
    },
    {
      "type": "blog feed",
      "title": "vorba.ch",
      "pattern": "^\\d{4}/.+$",
      "path": "feed.xml",
      "template": "article-feed.tpl",
      "limit": 10,
      "sort": [["created", "desc"]],
      "properties": {
        "title": "vorba.ch",
        "subtitle": "web, development and other things",
        "id": "http://vorb.de/log/feed.xml"
      }
    }
  ],

  "tags": {
    "directory": "tag",
    "template": "tag.tpl",
    "sort": [["created", "desc"]],
    "index": {
      "path": "index.html",
      "template": "tag-index.tpl"
    }
  },

  "autoindex": [
    {
      "path": "index.html",
      "pattern": "^\\d{4}$",
      "template": "year.tpl",
      "directory": {
        "filter": "^$",
        "match": "^$"
      },
      "file": {
        "filter": "index\\.html",
        "match": ".*\\.html"
      }
    }
  ]
}
